        <TextBlock Text="Страна:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="15" Margin="174,10,0,0" Width="112"></TextBlock>

        <ComboBox Margin="230,215,427,215" SelectionChanged="ComboBox_SelectionChanged">
