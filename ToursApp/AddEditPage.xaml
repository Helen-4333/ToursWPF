            <ComboBoxItem>4,0 и более</ComboBoxItem>
            <ComboBoxItem>Любой</ComboBoxItem>
        </ComboBox>

        <ComboBox Margin="10,139,602,141" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem>Любой</ComboBoxItem>
            <ComboBoxItem>Алания</ComboBoxItem>
            <ComboBoxItem>Анталия</ComboBoxItem>
            <ComboBoxItem>Бодрум</ComboBoxItem>
            <ComboBoxItem>Гагра</ComboBoxItem>
        </ComboBox>

        <ComboBox Margin="172,35,498,391" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem>Абхазия</ComboBoxItem>
            <ComboBoxItem>Албения</ComboBoxItem>
            <ComboBoxItem>Тунис</ComboBoxItem>
            <ComboBoxItem>Турция</ComboBoxItem>
            <ComboBoxItem>Хорватия</ComboBoxItem>
        </ComboBox>

        <ComboBox Margin="10,35,661,391" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem>Москва</ComboBoxItem>
            <ComboBoxItem>Казань</ComboBoxItem>
            <ComboBoxItem>Санкт-Петербург</ComboBoxItem>
            <ComboBoxItem>Самара</ComboBoxItem>
            <ComboBoxItem>Орск</ComboBoxItem>
        </ComboBox>


    </Grid>
</Page>
