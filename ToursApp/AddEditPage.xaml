            <ComboBoxItem>Завтрак,ужин</ComboBoxItem>
            <ComboBoxItem>Все включено</ComboBoxItem>
        </ComboBox>

        <ComboBox Margin="230,139,427,291" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem>Отель</ComboBoxItem>
            <ComboBoxItem>Аппартаменты</ComboBoxItem>
            <ComboBoxItem>Вилла</ComboBoxItem>
        </ComboBox>

        <ComboBox Margin="230,289,427,141" SelectionChanged="ComboBox_SelectionChanged">
